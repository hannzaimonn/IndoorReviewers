<div class="container">
	<div class="row">
		<h1>ジャンル一覧・追加</h1>
		<%= form_for(@genre) do |f| %>
		<% if @genre.errors.any? %>
		<div id="error_explanation">
			<p><%= @genre.errors.count %>件のエラーが発生しました。</p>
			<ul>
				<% @genre.errors.full_messages.each do |message| %>
				<li><%= message %></li>
				<% end %>
			</ul>
        </div>
		<% end %>
		<%= f.label :ジャンル %>
		<%= f.text_field :name %>
		<%= f.submit '追加', class: "btn btn-primary"%>
		<% end %>
<% @genres.each do |genre| %>
<%= genre.name %>
<%= link_to "編集",edit_admin_genre_path(genre.id), class: "btn btn-primary"%>
<% end %>