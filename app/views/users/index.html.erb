<div class="container">
 <div class="row">
 	<h1>ユーザー</h1>
 	<table class="table">
	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @users.each do |user| %>
		<tr>
			<td><%= link_to (user) do %>
				<%= attachment_image_tag(user, :image, :fill, 50, 50, fallback: "no_image.jpg") %>
				<% end %>
				</td>
			<td><%= user.name%></td>
			<td><%= link_to "ユーザーページ", user_path(user), class: "user_#{user.id}" %></td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>
</div>
