
<div class="container">
 <div class="row">
 	<div class="col-xs-3">
 		<h3>ユーザープロフィール</h3>
 		<table class="table">
 			<tr><%= attachment_image_tag(@user, :image_id, :fill, 100, 100, fallback: "no_image.jpg") %></tr>

 			<tr>
			    <th><%= @user.name %></th>
		    </tr>
</table>
<% if current_user.id == @user.id %>
<div>
	<%= link_to '編集',edit_user_path(@user), class: "col-xs-12 btn btn-default glyphicon edit_user_#{@user.id}" %>
</div>
<div>
	<%= link_to 'レビュー新規投稿',new_review_path, class: "col-xs-12 btn btn-default glyphicon" %>
</div>
<% end %>
    </div>
    <div class="col-xs-9">
    	<h2>投稿レビュー</h2>
    	　　　<% @user.reviews.each do |review| %>
	　　　　　<%= link_to review_path(review.id) do %>
	　　　　　<%= attachment_image_tag review, :image, format: 'jpeg', size: "150×150" %><br>
	　　　　　　<%= review.title %>
	　　　　　　<% end %>
	　　　　　　<%= review[:created_at].strftime("%Y-%m-%d %H:%M") %>
	　　　　　　<%= review.genre.name %>
	　　　　　　　<% end %>
    </div>
 </div>
</div>
