 <br><br>
 <div class="container text-center">
 	<div class="row">
 	<div class="center-block">
 		<%= search_form_for @q do |f| %>
 		<%= f.label :title, "検索" %>
 		<%= f.search_field :title_cont %>
 		<%= f.label :genre_id_eq, "ジャンル" %>
 		<%= f.collection_select :genre_id_eq, @genres, :id, :name, :include_blank => '指定なし' %>

 		<%= f.submit "検索" %>
        <% end %>
    </div>
   </div>

    </div>
<div class="container">
	<div class="text-center">
	<h1>レビュー一覧</h1>
    </div>
	<% @reviews.each do |review| %>
	<br>
	<div>
		<span>　　　　　　　　　　　　　　　</span>
	　　　<%= link_to review_path(review.id) do %>
	　　　<%= attachment_image_tag(review, :image, :fill, 65, 65, fallback: "no_image.jpg") %>
	     <% end %>
	     <span>　　　　　　　　　　　</span>
	     <%= link_to review_path(review.id) do %>
           <%= review.title %>
         <% end %>
    </div>
    <div class="col-xs-11 text-center">
    	<span>　　　　　　　　　　　　　　　</span>
    	<span>ユーザー名:<%= review.user.name %></span>
    	<span>　　　　　　　　　</span>
    	<span>ジャンル:</span>
    	<% if review.genre == nil %>
    	<% else %>
         <span><%= review.genre.name %></span>
         <% end %>
	         <span>　　　　　　　　　　　　　</span>
	     <span>投稿日:<%= review[:created_at].strftime("%Y-%m-%d %H:%M") %></span>
	     <hr>
    </div>
	<% end %>
</div>