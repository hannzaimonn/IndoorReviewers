 <div class="container text-center">
 	<div class="row">
 	<div class="center-block">
<%= form_tag(search_path, :method => 'get') do %>
    <%= text_field_tag (:word) %>
    <%= select_tag 'search', options_for_select([["前方一致","1"], ["後方一致","2"], ["完全一致","3"], ["部分一致","4"]]) %>
    <%= submit_tag '検索' %>
<% end %>
</div>
</div>

    </div>
<div class="container text-center">
	<h1>レビュー一覧</h1>
	<% @reviews.each do |review| %>
	<%= link_to review_path(review.id) do %>
	<%= attachment_image_tag(review, :image, :fill, 100, 100, fallback: "no_image.jpg") %><br>
	<%= review.title %>
	<% end %>
	<%= review[:created_at].strftime("%Y-%m-%d %H:%M") %>
	<%= review.genre.name %>
	<%= review.user.name %>
	<% end %>
</div>