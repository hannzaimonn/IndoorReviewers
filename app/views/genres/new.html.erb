<div class="container">
	<div class="row">
		<h1>ジャンル一覧・追加</h1>
		<%= form_for(@genre) do |f| %>
		<% if @genre.errors.any? %>
		<div id="error_explanation">
			<p><%= @genre.errors.count %>件のエラーが発生しました。</p>
			<ul>
				<% @genre.errors.full_messages.each do |message| %>
				<li><%= message %></li>
				<% end %>
			</ul>
        </div>
		<% end %>
		<%= f.label :name, "ジャンル" %>
		<%= f.text_field :name %>
		<%= f.submit '追加', class: "btn btn-primary"%>
		<% end %>
		<%= link_to 'レビュー新規投稿へ',new_review_path, class: "col-xs-5 btn btn-default glyphicon" %><br><br>
<% @genres.each do |genre| %>
<div class="col-xs-2">
・<%= genre.name %>
<% if genre.user.id == current_user.id %>
<%= link_to "削除", genre_path(genre), method: :delete, class: "btn btn-danger" %>
<% end %>
</div>
<% end %>